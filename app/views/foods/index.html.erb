<h1>Welcome to Recipe App</h1>
you are logged in as: <%= current_user.email %>
<%= button_to "Sign Out", destroy_user_session_path, method: :delete, data: {turbo: false}, class: 'sign-out-btn' %>
<%= link_to  "Add New Food", new_user_foods_path%>
<table>
    <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Action</th>
    </tr>
    <% @foods.each do |food|%>
        <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= food.price %></td>
            <td><%= food.quantity %></td>
            <td><%= link_to "Delete"%></td>
        </tr>
    <%end%>
</table>
