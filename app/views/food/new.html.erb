<h2>Create a Food</h2>
<div class="food-section">
<div>
    <%= form_with model: @food, url: user_food_index_path, local: true do |f| %>
            <p>
                <%= f.label :name, class: "Form-label" %> <br>
                <%= f.text_field :name, placeholder: 'Name', class: "Form-field" %>
            </p>
            <p>
                <%= f.label :measurement_unit, class: "Form-label" %> <br>
                <%= f.text_field :measurement_unit, placeholder: 'Measurement Unit', class: "Form-field" %>
            </p>
            <p>
                <%= f.label :price, class: "Form-label" %> <br>
                <%= f.text_field :price, placeholder: 'Price', class: "Form-field" %>
            </p>
            <p>
                <%= f.label :quantity, class: "Form-label" %> <br>
                <%= f.text_field :quantity, placeholder: 'Quantity', class: "Form-field" %>
            </p>

            <%= f.submit 'Submit', class: "From-submit" %>
    <%end%>
</div>
</div>