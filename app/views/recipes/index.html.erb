<h1 align="center">Recipes List</h1>

<button><%= link_to "Add a recipe", new_user_recipe_path %></button>
<br>

<% @recipes.each do |recipe| %>
  <div class= "recipe-container">
      <div class="card-container card">
        <div class="card-body">
          <div class="card-title card-head">

                    <%= link_to user_recipe_path(recipe.user, recipe) do %>
            <h2 class="card-title"><%= recipe.name %></h2>
          <% end %>
            <%= button_to "REMOVE RECIPE", user_recipe_path(params[:user_id], recipe), method: :delete %>
                      </div>
          <div class="card-description card-bodiem">
            <p class="card-text"><%= recipe.description %></p>
          </div>
        </div>
      </div>
       </div>
<% end %>
